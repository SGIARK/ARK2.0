{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"model": {
			"type": "string"
		},
		"messages": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"role": {
						"type": "string"
					},
					"content": {
						"type": "string"
					}
				},
				"required": [
					"role",
					"content"
				]
			}
		},
		"stream": {
			"type": "boolean"
		},
		"temperature": {
			"type": "integer"
		},
		"thread_id": {
			"type": "string"
		}
	},
	"required": [
		"model",
		"messages"
	]
}